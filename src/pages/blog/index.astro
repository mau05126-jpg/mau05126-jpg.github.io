---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => 
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<Layout title="Blog">
  <div class="bg-blue-600 py-8 px-4 shadow-lg pt-24">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-3">
        Mi Blog
      </h1>
      <p class="text-blue-100 text-lg">Experiencias y aprendizajes de mi vida académica</p>
    </div>
  </div>
  
  <div class="max-w-6xl mx-auto px-4 py-8">
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
      {sortedPosts.map((post) => (
        <div class="bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:shadow-md transition-all duration-200 overflow-hidden flex flex-col h-full">
          
          <div class="h-40 overflow-hidden bg-gray-200 relative">
            <div class="absolute inset-0 bg-gray-300 animate-pulse"></div>
            {post.data.image && (
              <img 
                src={post.data.image}  
                alt={post.data.title}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300 relative z-10"
                loading="lazy"
                decoding="async"
              />
            )}
          </div>
          
          <div class="p-4 flex flex-col grow">
            <div class="text-sm text-blue-600 mb-2 text-center">
              {post.data.pubDate.toLocaleDateString('es-ES')}
            </div>
            
            <h3 class="text-lg font-semibold text-gray-800 mb-3 line-clamp-2 text-center">
              {post.data.title}
            </h3>
            
            <div class="text-gray-600 text-sm mb-4 grow line-clamp-3">
              {post.data.description}
            </div>
            
            <a 
              href={`/blog/${post.slug}`}
              class="w-full py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium rounded transition-colors flex items-center justify-center"
            >
              <span>Leer más</span>
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
    
  </div>
</Layout>