---
// src/layouts/Layout.astro
import Navbar from '../components/molecules/Navbar.astro';
import Footer from '../components/molecules/Footer.astro';
import '../styles/global.css';  // ✅ IMPORTANTE: Importar aquí, no con <link>

const { title = "Mauricio | Portafolio", description = "Portafolio personal de Mauricio" } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <main class="pt-16">
      <slot />
    </main>
    <Footer />
  </body>
</html>